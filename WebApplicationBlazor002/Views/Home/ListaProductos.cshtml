@model ListaProductos

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<table>
    <thead>
        <tr>
            <td>ID</td>
            <td>Producto</td>
            <td>Precio</td>
            <td>Existencia</td>
            <td>Stock mínimo</td>
            <td>Stock máximo</td>
        </tr>
    </thead>
    @{
        foreach (var p in Model.Productos)
        {
            <tr>
                <td> @p.Id </td>
                <td> @p.Name </td>
                <td> @p.Price </td>
                <td> @p.Amount </td>
                <td> @p.MinStock </td>
                <td> @p.MaxStock </td>
            </tr>        
        }
    }
    
</table>
Total inventario:  @Model.TotalInventario
